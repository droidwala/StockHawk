<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <include
            layout="@layout/stock_detail_toolbar"
            android:id="@+id/toolbar" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/weekly_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/weekly_card_background">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    xmlns:tools="http://schemas.android.com/tools">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:text="@string/weekly_chart_header"
                        android:layout_margin="12dp"
                        android:drawableLeft="@drawable/point_green"
                        android:drawablePadding="4dp"
                        android:textColor="@color/color_white"
                        android:textStyle="bold"/>
                    <com.db.chart.view.BarChartView
                        android:id="@+id/weekly_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        app:chart_axisColor="#30547d99"/>
                    <TextView
                        android:id="@+id/no_weekly_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/no_weekly_data"
                        android:textColor="@color/color_white"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        tools:visibility="visible"
                        tools:text="No Data"/>
                </FrameLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/monthly_card"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/monthly_card_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:text="@string/monthly_chart_header"
                        android:layout_margin="12dp"
                        android:drawableLeft="@drawable/point_yellow"
                        android:drawablePadding="4dp"
                        android:textColor="@color/color_white"
                        android:textStyle="bold"/>
                    <com.db.chart.view.LineChartView
                        android:id="@+id/monthly_line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        app:chart_axisColor="#30547d99"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/sixty_days_card"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/sixty_days_card_background">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right"
                        android:text="@string/sixty_chart_header"
                        android:layout_margin="12dp"
                        android:drawableLeft="@drawable/point_red"
                        android:drawablePadding="4dp"
                        android:textStyle="bold"/>
                    <com.db.chart.view.LineChartView
                        android:id="@+id/sixty_days_line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="16dp"
                        app:chart_axisColor="#30547d99"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>